<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.herbertrausch.webservice1.br.com.herbertrausch.webservice1.MainActivity"
    android:id="@+id/layout_main_exemplo">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recuperar_dados_ws"
        android:id="@+id/btnRecuperar"
        android:onClick="recuperar"
        android:layout_below="@+id/btnSalvar"
        android:layout_alignLeft="@+id/btnSalvar"
        android:layout_alignStart="@+id/btnSalvar"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enviar_dados_ws"
        android:id="@+id/btnSalvar"
        android:layout_below="@+id/txtTelefone"
        android:onClick="salvar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome"
        android:id="@+id/lblNmoe"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtNome"
        android:layout_alignBottom="@+id/lblNmoe"
        android:layout_alignLeft="@+id/btnSalvar"
        android:layout_alignStart="@+id/btnSalvar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telefone:"
        android:id="@+id/lblTelefone"
        android:layout_alignBottom="@+id/txtTelefone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtTelefone"
        android:layout_below="@+id/txtNome"
        android:layout_alignRight="@+id/txtNome"
        android:layout_alignEnd="@+id/txtNome" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/btnRecuperar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
